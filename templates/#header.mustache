{{!
  @template theme_shoelace/#header

  Moodle header tile template.

  The purpose of this template is to render the header.
}}
<header role="banner" class="navbar navbar-fixed-top{{{html_navbarclass}}} moodle-has-zindex">
    <nav role="navigation" class="navbar-inner">
        <div class="container-fluid">
            {{{compact_logo}}}
            <a class="brand" href="{{{wwwroot}}}">{{{shortname}}}</a>
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            {{{gotobottom_menu}}}
            {{{user_menu}}}
            {{{navbar_plugin_output}}}
            {{{search_box}}}
            <div class="nav-collapse collapse">
                {{{custom_menu}}}
                <ul class="nav pull-right">
                    <li>{{{page_heading_menu}}}</li>
                </ul>
            </div>
        </div>
    </nav>
</header>