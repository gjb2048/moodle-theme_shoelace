{{!
  @template theme_shoelace/frontpage2

  Moodle frontpage template.

  The purpose of this template is to render the frontpage two column layout.
}}
{{{header_tile}}}

<div id="page" class="container-fluid">
    {{{page_header_tile}}}

    {{{slideshow_marketing_tile}}}

    <div id="page-content" class="row-fluid">
        <div id="region-main" class="{{{regionmain}}}">
            <section id="region-main-shoelace">
                {{{course_content_header}}}
                {{{main_content}}}
                {{{course_content_footer}}}
            </section>
            <div id="region-main-shoelace-shadow"></div>
        </div>
        {{#blocks}}
            {{{blocks}}}
        {{/blocks}}
    </div>

    {{{footer_tile}}}
</div>
